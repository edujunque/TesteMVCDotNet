@model vidly.ViewModel.IndexMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (@Model.Movies.Count == 0)
{
    <p>There is no Movies!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        @foreach (var movies in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movies.Name, "Details", "Movies",  new { movieId = movies.Id }, null)</td>
                <td>@movies.Genre.Name</td>
            </tr>

        }
    </table>
}


