@model vidly.ViewModel.IndexCustomerViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (@Model.Customers.Count == 0)
{
    <p>There is no Customers!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>
               Customer Name
            </th>
        </tr>

        @foreach (var customer in Model.Customers)
        {
            <tr><td>@Html.ActionLink(customer.Name, "Details", new { customerID = customer.Id })</td></tr>
          
        }
    </table>
}

